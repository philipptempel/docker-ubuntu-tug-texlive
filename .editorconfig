# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[Makefile]
indent_style = tabs
indent_size = 2

[*.makefile]
indent_style = tabs
indent_size = 2

[*.py]
indent_size = 4

[*.tex]
indent_size = 2
indent_style = space
